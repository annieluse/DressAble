<%- include("partials/header") %>

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Aleo&family=Lato&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Fira+Sans+Condensed:wght@200;800&display=swap" rel="stylesheet"/>

<!-- Global + Page CSS -->
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/forum.css">

<script defer src="/js/forum.js"></script>

<body>
<main>

  <!-- Page Header -->
  <div class="page-header">
      <h2 class="page-title">Accessible Fashion Forum</h2>
      <div class="page-divider"></div>
      <p class="page-intro">
      Connect with others, ask questions, share recommendations, and learn from real experiences in the accessible fashion community.
      Browse posts, filter by tags, and explore discussions on clothing solutions that meet diverse needs.
      </p>
  </div>

<!-- ================= TAGS ================= -->

<div class="filter-section">

  <!-- Clothing -->
  <div class="filter-box">
    <!-- ROW (Title left + Search Bar right) -->
    <div class="tag-header-row">
        <div class="tag-header">
            <img src="https://cdn-icons-png.flaticon.com/512/126/126422.png" class="tag-icon">
            <h3 class="filter-title">Clothing Tags</h3>
        </div>

        <div class="search-container">
            <input type="text" placeholder="Search..." class="search-box">
            <img src="https://icon-library.com/images/search-png-icon/search-png-icon-22.jpg" class="search-icon">
        </div>
    </div>

      <!-- Tag Grid -->
      <div class="tag-grid collapsible-tags">
        <% const clothingTags = ["T-shirt","Sweater","Hoodie","Jacket","Vest","Jeans","Pants","Shorts","Skirt","Leggings","Hat","Scarf","Gloves","Belt","Tie","Socks","Shoes","Boots","Sneakers","Slippers","Sandals","Dress","Suit","Underwear","Pajamas","Sports Wear"]; %>
        
        <% clothingTags.forEach((tag, i)=>{ %>
          <button class="tag-button <%= i >= 5 ? 'hidden-tag' : '' %>"><%= tag %></button>
        <% }) %>

        <button class="toggle-tags-btn">Show More</button>
      </div>
    
  </div>

  <!-- Disability -->
  <div class="filter-box">
    <div class="tag-header-row">
        <div class="tag-header">
            <img src="https://cdn-icons-png.flaticon.com/512/126/126422.png" class="tag-icon">
            <h3 class="filter-title">Disability Tags</h3>
        </div>

        <div class="search-container">
            <input type="text" placeholder="Search..." class="search-box">
            <img src="https://icon-library.com/images/search-png-icon/search-png-icon-22.jpg" class="search-icon">
        </div>
    </div>
      <div class="tag-grid collapsible-tags">
        <% const disabilityTags = ["Visually Impaired","Sensory Processing","Wheelchair","Amputee","Developmental Disabilities","Medical Device","Incontinence Needs","Autism","Elderly","Limb Differences","Blind","Chronic Illnesses","ADHD","Temporary Disabilities","Neuromuscular Disorders","Cognitive Disabilities","Little People/ Dwarfism"]; %>

        <% disabilityTags.forEach((tag,i)=>{ %>
          <button class="tag-button <%= i >= 3 ? 'hidden-tag' : '' %>"><%= tag %></button>
        <% }) %>

        <button class="toggle-tags-btn">Show More</button>
      </div>
    
  </div>
</div>

<br>

<!-- Where posts will populate later -->
<div id="post-container"></div>

</main>

<%- include("partials/footer") %>
</body>
