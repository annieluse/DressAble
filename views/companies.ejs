<%- include("partials/header") %>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Aleo&family=Lato&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans+Condensed:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet"/>
    <!-- External CSS file -->
    <link rel="stylesheet" href="/css/style.css">      <!-- Global/base styles -->
    <link rel="stylesheet" href="/css/companies.css">  <!-- Page-specific styles -->
<body>
    <main>
      <!-- Page Header -->
      <div class="page-header">
        <h2 class="page-title">Accessible Fashion Companies</h2>
        <div class="page-divider"></div>
        <p class="page-intro">
          Explore brands and companies that are leading the way in adaptive and accessible fashion. 
          Each company is committed to creating clothing solutions that prioritize comfort, functionality, 
          and style for people with diverse needs.
        </p>
      </div>

    <div class="cards-container">
      
        <!-- Server side rendered posts -->
        <section class="company-grid">
            <% companies.forEach(company => { %>
                <!-- Reusable company template file -->
            <%- include("partials/company", { company }) %>
            <% }) %>
        </section>
    </div>

    </main>
</body>
      
<%- include("partials/footer") %>