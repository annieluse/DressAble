<%- include("partials/header") %>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Aleo&family=Lato&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans+Condensed:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet"/>
    <!-- External CSS file -->
    <link rel="stylesheet" href="/css/style.css">      <!-- Global/base styles -->
    <link rel="stylesheet" href="/css/disabilities.css">  <!-- Page-specific styles -->
<body>
    <main>
      <!-- Page Header -->
      <div class="page-header">
        <h2 class="page-title">Disability & Accessibility Information</h2>
        <div class="page-divider"></div>
        <p class="page-intro">
          Learn about different disabilities and conditions that benefit from adaptive fashion, 
          along with specific clothing recommendations and resources tailored to each need. 
          Our goal is to help designers access research.
        </p>
      </div>

    <div class="cards-container">
      
        <!-- Server side rendered posts -->
        <section class="disability-grid">
            <% disabilities.forEach(disability => { %>
                <!-- Reusable disability template file -->
            <%- include("partials/disabilityCard", { disability }) %>
            <% }) %>
        </section>
    </div>

    </main>
</body>
      
<%- include("partials/footer") %>